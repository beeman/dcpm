  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "echo \"Error: run tests from root\" && exit 1",
    "build": "tsc",
    "watch": "node --inspect=0.0.0.0 -r ts-node/register lib/server/index.ts",
    "watch:brk": "node --inspect-brk=0.0.0.0 -r ts-node/register lib/server/index.ts",
    "dev:up": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build -d",
    "dev:down": "docker-compose stop",
    "dev:logs": "docker-compose logs --tail 100 -f backend",
    "dev:sh": "docker-compose exec backend sh",
    "lint": "eslint lib/**/*.ts",
    "dev": "nodemon"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
