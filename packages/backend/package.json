  "main": "lib/server/index.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "echo \"Error: run tests from root\" && exit 1",
    "build": "tsc",
    "watch": "TS_NODE_FILES=true node --inspect=0.0.0.0 -r ts-node/register lib/server/index.ts",
    "watch:brk": "TS_NODE_FILES=true node --inspect-brk=0.0.0.0 -r ts-node/register lib/server/index.ts",
    "dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build -d",
    "dev:down": "docker-compose stop",
    "dev:logs": "docker-compose logs --tail 100 -f backend",
    "dev:sh": "docker-compose exec backend sh",
    "dev:start": "nodemon",
    "lint": "eslint lib/**/*.ts"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "gridfs-stream": "^1.1.1",
    "helmet": "^3.21.2",
    "jws": "^3.2.2",
    "mongoose": "^5.7.10",
    "multer": "^1.4.2",
    "multer-gridfs-storage": "^4.0.1",
    "semver": "^6.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.2",
    "@types/gridfs-stream": "^0.5.32",
    "@types/helmet": "^0.0.45",
    "@types/jest": "^24.0.22",
    "@types/jws": "^3.2.0",
    "@types/mongoose": "^5.5.30",
    "@types/multer": "^1.3.10",
    "@types/node": "^12.12.7",
    "@types/semver": "^6.2.0",
    "nodemon": "^1.19.4",
    "ts-node": "^8.5.0",
    "typescript": "^3.7.2"
  }
}
